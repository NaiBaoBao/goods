<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.goods.mapper.GoodsCategoryMapper">
    <select id="listGoodsCategory" resultType="com.example.goods.domain.GoodsCategory">
        select id,
               name,
               pid,
               gmt_create,
               gmt_modified,
               is_deleted,
               pic_url
               from goods_category where is_deleted=0
    </select>
    <insert id="addGoodsCategory" parameterType="com.example.goods.domain.GoodsCategory" useGeneratedKeys="true" keyProperty="id">
        insert into goods_category (name,pid,gmt_create,gmt_modified,is_deleted,pic_url)
        values (#{name},#{pid},current_timestamp,current_timestamp,0,#{picUrl})
    </insert>
    <select id="getGoodsCategoryById" parameterType="integer" resultType="com.example.goods.domain.GoodsCategory">
        select id,
               name,
               pid,
               gmt_create,
               gmt_modified,
               is_deleted,
               pic_url
               from goods_category where id=#{id} and is_deleted=0
    </select>
</mapper>